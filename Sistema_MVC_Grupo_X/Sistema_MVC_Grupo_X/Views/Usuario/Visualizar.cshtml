@model Sistema_MVC_Grupo_X.Models.Usuario
@{
    ViewBag.Title = "Visualizar";
}

<h2>Visualizar</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Usuario/Index">Semestre</a>
        </li>
        <li class="breadcrumb-item active">@Model.nombre</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        Información detallada del semestre
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.usuario_id</dd>
            <dt>Docente</dt>
            <dd>@Model.Docente.nombre @Model.Docente.apellido</dd>
            <dt>Usuario</dt>
            <dd>@Model.nombre</dd>
            <dt>Nivel</dt>
            <dd>@Model.nivel</dd>
            <dt>Estado</dt>
            <dd>@(Model.estado == "A" ? "Activo" : "Inactivo")</dd>
        </dl>
    </div>
</div>
<hr />
