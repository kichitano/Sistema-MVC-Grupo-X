@model Sistema_MVC_Grupo_X.Models.Modelo
@{
    ViewBag.Title = "AgregarEditar";
}

<h2>Agregar Editar</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Modelo/Index">Modelo</a>
        </li>
        <li class="breadcrumb-item active">
            @(Model.modelo_id > 0 ? Model.nombre : "Nuevo Registro")
        </li>
    </ol>
</nav>
@using (Html.BeginForm("Guardar", "Modelo", FormMethod.Post, new { id = "frm-modelo" }))
{
    @Html.HiddenFor(x => x.modelo_id)
    <div class="card">
        <div class="card-header">Información del semestre</div>
        <div class="card-body">
            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.modelo_id, new
                { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Nombre")
                @Html.TextBoxFor(x => x.nombre, new
                { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre, null,
                     new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Descripcion")
                @Html.TextBoxFor(x => x.descripcion, new
                { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.descripcion, null,
                     new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Estado")
                <input id="estadoCheckbox" type="checkbox" data-toggle="toggle" @(Model.estado == "A" ? "checked" : "")
                       data-on="Activo" data-off="Inactivo" data-size="large" data-onstyle="success" data-offstyle="danger" data-width="100%">
                <input name="estado" id="estado" type="hidden" value="@(Model.estado == "A" ? "A" : "I")">
            </div>
        </div>
    </div>
    <br />
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/Modelo" class="btn btn-danger">Cancelar</a>
    </div>
}
<hr />