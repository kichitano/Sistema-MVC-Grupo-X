@model Sistema_MVC_Grupo_X.Models.Modelo
@{
    ViewBag.Title = "Visualizar";
}

<section class="content-header">
    <h1>
        Visualizar
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Modelo/Index"><i class="fa fa-dashboard"></i> Modelo</a></li>
        <li class="active"> @Model.nombre</li>
    </ol>
</section>
<section class="content container-fluid">
    <div class="box">
        <div class="box-header with-border">
            Información detallada del Modelo
        </div>
        <div class="box-body">
            <dl class="dl-horizontal">
                <dt>Id</dt>
                <dd>@Model.modelo_id</dd>
                <dt>Semestre</dt>
                <dd>@Model.nombre</dd>
                <dt>Descripción</dt>
                <dd>@Model.descripcion</dd>
                <dt>Estado</dt>
                <dd>@(Model.estado == "A" ? "Activo" : "Inactivo")</dd>
            </dl>
        </div>
    </div>
</section>