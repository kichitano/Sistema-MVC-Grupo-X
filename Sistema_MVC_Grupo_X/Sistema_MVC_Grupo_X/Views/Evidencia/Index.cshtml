@model IEnumerable<Sistema_MVC_Grupo_X.Models.Evidencia>

<h2 class="card text-center">Gestión de Evidencia</h2>
<br />
<div class="text-right">
    <a href="~/Evidencia/AgregarEditar/" class="btn btn-secondary text-right">
        Nuevo Registro
    </a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.semestre_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.modelo_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.archivoRuta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.semestre_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.modelo_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.archivoRuta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        
        
        <td>
            @Html.DisplayFor(modelItem => item.categoria)
        </td>
        <td>
            @(item.estado == "A" ? "Activo" : "Inactivo")
        </td>
        <td>
            <a href="~/Evidencia/Visualizar/@item.evidencia_id"
               class="btn btn-xs btn-warning" style="padding:inherit">Visualizar</a>
            <a href="~/Evidencia/AgregarEditar/@item.evidencia_id"
               class="btn btn-xs btn-primary" style="padding:inherit">Modificar</a>
            <a href="~/Evidencia/Eliminar/@item.evidencia_id"
               class="btn btn-xs btn-danger" style="padding:inherit"
               onclick="return confirm('¿Esta seguro de eliminar ...?');">Eliminar</a>
        </td>
    </tr>
    }

</table>
