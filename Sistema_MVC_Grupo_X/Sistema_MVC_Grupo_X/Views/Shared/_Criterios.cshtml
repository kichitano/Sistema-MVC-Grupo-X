@model List<Sistema_MVC_Grupo_X.Models.Criterio>

@{
    Layout = null;
    List<Sistema_MVC_Grupo_X.Models.EvidenciaCriterio> objEvidenciasCriterios = ViewBag.EvidenciaCriterio;
    String check = "";
}

@if (Model.Count <= 0)
{
    <label>-- Seleccione un modelo valido primero --</label>
}


@foreach (var c in Model)
{
    <div class="col-12">    
        @foreach (var oec in objEvidenciasCriterios)
        {
            if (oec.criterio_id == c.criterio_id)
            {
                check = "checked";
                break;
            }
            else
            {
                check = "";
            }
        }
        <input class="checkbox" type="checkbox" name="criterios" value="@c.criterio_id" @Html.Raw(check)/><label for="criterios" style="padding-left:5px;">@c.nombre_spanish</label>
    </div>
}
