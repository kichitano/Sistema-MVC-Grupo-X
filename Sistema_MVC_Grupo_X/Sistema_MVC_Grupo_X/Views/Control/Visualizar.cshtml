@model Sistema_MVC_Grupo_X.Models.Control
@{
    ViewBag.Title = "Visualizar";
}

<h2>Visualizar</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Control/Index">Control</a>
        </li>
        <li class="breadcrumb-item active">@Model.titulo</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        Información detallada del control
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.control_id</dd>
            <dt>Semestre</dt>
            <dd>@Model.Semestre.nombre</dd>
            <dt>Titulo</dt>
            <dd>@Model.titulo</dd>
            <dt>Fecha de creacion</dt>
            <dd>@Model.fechacreacion.Value.ToString("dd/MM/yyyy")</dd>
            <dt>Estado</dt>
            <dd>@(Model.estado == "A" ? "Activo" : "Inactivo")</dd>
        </dl>
    </div>
</div>
<hr />
