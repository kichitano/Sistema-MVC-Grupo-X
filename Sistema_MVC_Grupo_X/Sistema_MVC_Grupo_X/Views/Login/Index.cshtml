@{
    ViewBag.Title = "Autenticación";
}

<div id="login">
    <h1 class="page-header text-center">Autenticación en el sistema</h1>
            <div class="card card-deck">    
                <div class="card-heading">Acceso al sistema</div>
                    <div class="card-body">
                        @using (Html.BeginForm("Validar", "Login", FormMethod.Post))
                        {
                            <div class="form-group">    
                                <label>Usuario</label>
                                <input type="text" name="Usuario" class="form-control" placeholder="Ingrese cuenta de usuario" value="edwin"/>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="Password" class="form-control" placeholder="Ingrese su password" value="123456" />
                            </div>
                            <div class="text-right">
                                <button data-ajax="true" type="submit" class="btn btn-primary">
                                    Ingresar
                                </button>
                            </div>
                        }
                    </div>
            </div>
</div>